{
    "manifest_version": 2,
  
    "name": "Trigger Finder Plugin",
    "description": "This extension will find sentences that can trigger emetophobic people",
    "version": "1.0",

    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["<all_urls>"]
      }],

    "background":
    {
        "scripts": ["thirdParty/jquery.js", "background.js"]
    },
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab",
     "http://127.0.0.1:5000/*"
     ]
  }